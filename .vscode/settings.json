{
  // Use the project's virtual environment python executable
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // Legacy key for older VS Code versions
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
  // Make the project's `src` available to the language server for imports
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],
  // Enable pylint linting (pylint will read .pylintrc)
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true
}
